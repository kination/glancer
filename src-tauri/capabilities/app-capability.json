{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "app-capability",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "backend_server",
          "sidecar": true,
          "args": true
        },
        {
          "name": "ollama",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "backend_server",
          "sidecar": true,
          "args": true
        },
        {
          "name": "ollama",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}