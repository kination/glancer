{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "glancer",
  "version": "0.1.0",
  "identifier": "com.glancer.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Glancer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "app-capability"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "backend_server",
      "ollama"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}